

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id String @id @map("_id") @default(uuid())
  Firstname String
  Lastname String
  Email String @unique
  Password String
  tasks Task[]
  }

  model Task {
  id String @id @map("_id") @default(uuid())
  title String
  description String
  Status TaskStatus
  user User @relation(fields: [userId], references: [id])
  userId String 

  }

  enum TaskStatus {
    PENDING
    STARTING
    FINISHING
  }
