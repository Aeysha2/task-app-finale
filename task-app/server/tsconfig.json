{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "rootDir": "src",
        "strict": true,
        "target": "es2019",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {"@src/*":  ["src/*"]},
        "baseUrl": "."

    },
    "include": ["src/**/*",],
    "exclude": ["node_modules", "dist"]
}
